<de.xikolo.views.CourseFilterClassifierView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/classifier_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white_second"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/classifier_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:spinnerMode="dialog"/>

</de.xikolo.views.CourseFilterClassifierView>
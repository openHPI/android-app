<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/apptheme_main_light">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- This color is needed to be set - doesn't affect anything -->
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
    <!-- This is the button background -->
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_contained_disabled_bg" />
                    <corners android:radius="@dimen/corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/apptheme_main" />
                    <corners android:radius="@dimen/corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>

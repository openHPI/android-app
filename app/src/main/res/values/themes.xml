<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryVariant">@color/apptheme_primary_dark</item>
        <item name="colorSecondary">@color/apptheme_secondary</item>
        <item name="colorSecondaryVariant">@color/apptheme_secondary_dark</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/statusbar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="castExpandedControllerToolbarStyle">
            @style/ThemeOverlay.MaterialComponents.Dark.ActionBar
        </item>
        <item name="castExpandedControllerStyle">@style/CustomCastExpandedController</item>
    </style>

    <style name="AppTheme.DarkStatusBar" parent="AppTheme">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.TranslucentStatusAndNavigation" parent="AppTheme.TranslucentStatus">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryVariant">@color/apptheme_primary_dark</item>
        <item name="colorSecondary">@color/apptheme_secondary</item>
        <item name="colorSecondaryVariant">@color/apptheme_secondary_dark</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TextViewTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">@array/cast_expanded_controller_control_buttons</item>
    </style>

    <array name="cast_expanded_controller_control_buttons">
        <item>@id/cast_button_type_empty</item>
        <item>@id/cast_button_type_rewind_30_seconds</item>
        <item>@id/cast_button_type_mute_toggle</item>
        <item>@id/cast_button_type_empty</item>
    </array>

</resources>

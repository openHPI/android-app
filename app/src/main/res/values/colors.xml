<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Colors -->
    <color name="transparent">#00000000</color>
    <color name="white">#ffffff</color>
    <color name="white_60">#99FFFFFF</color>
    <color name="black">#000000</color>
    <color name="black_10">#1A000000</color>


    <!-- Text -->
    <color name="text_main">#DE000000</color>
    <color name="text_main_icon">#C4000000</color>
    <color name="text_second">#8A000000</color>
    <color name="text_light">#61000000</color>
    <color name="text_white">@color/white</color>
    <color name="text_white_second">@color/white_60</color>

    <color name="text_video_controls">@color/white</color>


    <!-- Content backgrounds -->
    <color name="content">#fafafa</color>
    <color name="content_video">#000000</color>
    <color name="content_video_preview">#CC000000</color>
    <color name="content_splash">@color/apptheme_splash_background</color>


    <!-- Gradients -->
    <color name="gradient_dark">#9A000000</color>
    <color name="gradient_placeholder_start">@color/apptheme_gradient_placeholder_start</color>
    <color name="gradient_placeholder_end">@color/apptheme_gradient_placeholder_end</color>


    <!-- Toolbar + Statusbar -->
    <color name="toolbar">@color/apptheme_toolbar</color>
    <color name="toolbar_offline">@color/apptheme_toolbar_offline</color>
    <color name="toolbar_collapsing_scrim">@color/apptheme_main</color>
    <color name="toolbar_icon">@color/apptheme_toolbar_icon</color>

    <color name="statusbar">@color/apptheme_statusbar</color>
    <color name="statusbar_offline">@color/apptheme_statusbar_offline</color>


    <!-- Buttons -->
    <color name="button_text_color">@color/apptheme_main</color>
    <color name="button_text_color_disabled">#c4c4c4</color>
    <color name="button_bg">@color/transparent</color>
    <color name="button_ripple">@color/black_10</color>
    <color name="button_outlined_border">#c4c4c4</color>
    <color name="button_contained_text_color">@color/white</color>
    <color name="button_contained_text_color_disabled">#888888</color>
    <color name="button_contained_bg">@color/apptheme_main</color>
    <color name="button_contained_bg_disabled">#e5e5e5</color>
    <color name="button_contained_ripple">@color/apptheme_main_light</color>

    <color name="button_video_controls">#ccffffff</color>
    <color name="button_play_bg">@color/apptheme_button_play_bg</color>
    <color name="button_play_fg">@color/apptheme_button_play_fg</color>
    <color name="button_play_ripple">@color/apptheme_main_light</color>


    <!-- Section header -->
    <color name="section_header_text">@color/apptheme_section_header_text</color>
    <color name="section_header_bg">@color/apptheme_section_header_bg</color>
    <color name="section_header_locked_bg">@color/apptheme_section_header_bg_locked</color>
    <color name="section_header_locked_text">@color/apptheme_section_header_text_locked</color>


    <!-- Banner -->
    <color name="banner_yellow">#F5A704</color>
    <color name="banner_green">#8CB30D</color>
    <color name="banner_grey">#5F5F5F</color>


    <!-- Progress -->
    <color name="progress_bar_fg">#80B600</color>
    <color name="progress_bar_bg">@color/black_10</color>
    <color name="progress_cast">@color/apptheme_second</color>

    <!-- Quiz indicators -->
    <color name="quiz_correct">#40e643</color>
    <color name="quiz_wrong">#e84141</color>
    <color name="quiz_actual">#bbbbbb</color>


    <!-- Misc -->
    <color name="divider">@color/black_10</color>
    <color name="counter_pill_bg">@color/apptheme_main</color>
    <color name="circle_indicator">@color/apptheme_main</color>
    <color name="underline">@color/text_light</color>
    <color name="tab_text">@color/apptheme_tab_text</color>
    <color name="launcher_icon_bg">@color/apptheme_launcher_icon_bg</color>


    <!-- Colors that may be overridden by flavor. Only for internal use, use the wrapper above instead. -->
    <color name="apptheme_toolbar">@color/apptheme_main</color>
    <color name="apptheme_statusbar">@color/apptheme_main_dark</color>
    <color name="apptheme_toolbar_offline">#424242</color>
    <color name="apptheme_statusbar_offline">#282828</color>
    <color name="apptheme_toolbar_icon">@color/white</color>

    <color name="apptheme_gradient_placeholder_start">@color/apptheme_third_60</color>
    <color name="apptheme_gradient_placeholder_end">@color/apptheme_second_60</color>

    <color name="apptheme_tab_text">@color/white</color>
    <color name="apptheme_tab_text_unfocused">@color/white_60</color>
    <color name="apptheme_tab_indicator">@color/white</color>

    <color name="apptheme_section_header_text">@color/white</color>
    <color name="apptheme_section_header_bg">@color/apptheme_main</color>
    <color name="apptheme_section_header_bg_locked">@color/text_light</color>
    <color name="apptheme_section_header_text_locked">@color/white</color>

    <color name="apptheme_splash_background">@color/white</color>

    <color name="apptheme_button_play_bg">@color/apptheme_main</color>
    <color name="apptheme_button_play_fg">@color/white</color>

    <color name="apptheme_launcher_icon_bg">#FFFFFF</color>


    <!-- Overrides -->
    <!-- this is needed as preference_category_material layout is using this color as the text color -->
    <color name="preference_fallback_accent_color" tools:override="true">@color/apptheme_second
    </color>

</resources>

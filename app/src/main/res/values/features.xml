<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="InconsistentArrays,MissingTranslation,UnusedResources">

    <!-- flavors can enable these features -->
    <bool name="recap">false</bool>
    <bool name="documents">false</bool>
    <bool name="channels">false</bool>
    <bool name="course_reactivation">false</bool>

    <!-- flavors can disable these features -->
    <bool name="course_banner">true</bool>
    <bool name="show_dates_for_never_ending_courses">true</bool>
    <bool name="merge_current_and_future_courses">true</bool>

    <!-- flavors can enable these features by providing the required strings -->
    <string name="url_copyright" />
    <string name="url_faq" />

    <string name="sso_provider" />

    <string name="custom_cast_application_id" />

    <!-- flavors can enable these features by providing elements for the arrays -->
    <string-array name="course_filter_classifier_keys" />
    <string-array name="course_filter_classifier_titles" />

    <string-array name="legal_links_urls" />
    <string-array name="legal_links_titles" />

    <string-array name="nav_external_links_urls" />
    <string-array name="nav_external_links_titles" />
    <array name="nav_external_links_icons" />

</resources>

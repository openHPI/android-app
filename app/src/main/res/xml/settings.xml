<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/preference_screen">

    <androidx.preference.PreferenceCategory
        android:key="@string/preference_category_general"
        android:title="@string/settings_category_general">

        <androidx.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_confirm_delete"
            android:title="@string/settings_title_ask_delete" />

        <androidx.preference.ListPreference
            android:defaultValue="@string/settings_default_value_storage"
            android:entries="@array/settings_values_storages"
            android:entryValues="@array/settings_values_storages"
            android:key="@string/preference_storage"
            android:title="@string/settings_title_storage" />

        <androidx.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_confirm_open_external_content"
            android:title="@string/settings_title_ask_open_external_content" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/settings_category_data_usage">

        <androidx.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_video_quality"
            android:summary="@string/settings_summary_video_quality"
            android:title="@string/settings_title_video_quality" />

        <androidx.preference.CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_download_network"
            android:summary="@string/settings_summary_download_network"
            android:title="@string/settings_title_download_network" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="@string/preference_category_video_playback_speed"
        android:title="@string/settings_category_video">

        <androidx.preference.ListPreference
            android:defaultValue="@string/settings_default_value_video_playback_speed"
            android:entries="@array/settings_values_video_playback_speed"
            android:entryValues="@array/settings_values_video_playback_speed"
            android:key="@string/preference_video_playback_speed"
            android:summary="@string/settings_summary_video_playback_speed"
            android:title="@string/settings_title_video_playback_speed" />

        <androidx.preference.Preference
            android:key="@string/preference_video_pip"
            android:title="@string/settings_title_video_pip" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="@string/preference_category_info"
        android:title="@string/settings_category_about">

        <androidx.preference.Preference
            android:key="@string/preference_copyright"
            android:title="@string/settings_copyright" />

        <androidx.preference.Preference
            android:key="@string/preference_imprint"
            android:title="@string/settings_imprint" />

        <androidx.preference.Preference
            android:key="@string/preference_privacy"
            android:title="@string/settings_privacy" />

        <androidx.preference.Preference
            android:key="@string/preference_terms_of_use"
            android:title="@string/settings_terms_of_use" />

        <androidx.preference.Preference
            android:key="@string/preference_open_source_licenses"
            android:summary="@string/settings_summary_licenses"
            android:title="@string/settings_title_licenses" />

        <androidx.preference.Preference
            android:key="@string/preference_build_version"
            android:summary="@string/settings_summary_build"
            android:title="@string/settings_title_build" />

        <androidx.preference.Preference android:key="@string/preference_login_out" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>
